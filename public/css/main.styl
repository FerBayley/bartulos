*
	margin 0
	padding 0
body 
	box-sizing border-box
	font-size 16px
	height 100%
footer
	height auto
	padding 2em 0 6em 0
	text-align center
	width 100%
	.footer-col1
		display inline-block
		margin -1em 1em 0 1em
		vertical-align top
		width auto
	.footer-col2
		color #999999
		font-family 'Biryani', sans-serif
		font-size .7em
		display inline-block
		line-height 1.5em
		margin 0 1em 0 1em
		text-align left
		vertical-align top
		width 30%
	.footer-col3
		display inline-block
		vertical-align top
		width 13%
		ul li
			font-family 'Biryani', sans-serif
			font-size .7em
			line-height 2.5em
			list-style none
			text-align left
			a
				color #999999
				text-decoration none
	.footer-col4
		color #999999
		display inline-block
		text-align left
		vertical-align top
		width 23%
		h2
			font-size .8em
			margin 0 0 .5em 0
		ul li
			font-family 'Biryani', sans-serif
			font-size .8em
			list-style none
			display inline-block
			vertical-align middle
			a
				color #999999
				text-decoration none
header
	height 100%
	margin 0 0 60px 0
	width 100%
.Destacados
	height auto
	text-align center
	width 100%
	.Imagen-1
		display inline-block
		margin 0 .1em 0 .1em
	.Imagen-2
		display inline-block
		margin 0 .1em 0 .1em
	.Imagen-3
		display inline-block
		margin 0 .1em 0 .1em
	.Imagen-4
		display inline-block
		margin 0 .1em 0 .1em
.Menu
	display inline-block
	height 100%
	margin 0 1em 0 5em 
	padding 2em
	vertical-align top
	width 20%
	ul li
		font-family 'Quicksand', sans-serif
		font-size 1.05em
		font-weight 100
		list-style none
		line-height 2.2em
		margin 0 1em 0 1em
		span
			background-color #B73500
			border-radius 5px
			color #FFF
			padding .3em .5em .3em .5em
		a
			color #333
			text-decoration none
.Path
	margin 50 0 1em 0
	width auto
	&-footer
		background-image url("../../public/images/path.png")
		background-repeat no-repeat
		background-position center
		background-size cover
		height 70px	
.Redes
	margin .5em 0 0 0 
	ul li
		display inline-block
		margin 0 0 0 .6em
		padding 0
		vertical-align top
.Separdor
	border-bottom dashed 1px #333
	margin 0 auto
	margin-bottom 1em
	margin-top 4em
	width 30%
.Servicios
	height auto
	padding 3em 0 3em 0
	text-align center
	width 100%
	&-logo
		height auto
		display inline-block
		margin 0 .3em 0 .3em
		text-align center
		vertical-align middle
		width 15%
	&-descripcion
		background-image url("../../public/images/fondo.png")
		background-repeat no-repeat
		background-position center
		height 267px
		display inline-block
		vertical-align middle
		width 55%
		article
			line-height 2em
			margin 3em 0 0 0
			padding 0 4em 0 5em
			text-align left
			p
				font-family 'Biryani', sans-serif
				font-size .9em
				color #655752
			a
				color #FFF
				background-color #B73500
				border-radius 3px
				font-family 'Quicksand', sans-serif
				font-size .8em
				font-weight 100
				text-decoration none
				padding .3em 2.8em .3em 1em
.Slider
	display inline-block
	vertical-align top
	width auto
.Titulo
	font-family 'Quicksand', sans-serif
	font-size 1.2em
	margin 0 0 50px 0
	text-align center
	h3
		color #655752
		font-family 'Biryani', sans-serif
		font-size .8em
		margin-top -1.3em
	&-col1
		border-bottom dashed 1px grey
		display inline-block
		vertical-align middle
		width 20%
	&-col2
		color #B73500
		display inline-block
		vertical-align middle
		width 40%
	&-col3
		border-bottom dashed 1px grey
		display inline-block
		vertical-align middle
		width 20%
